{
  "manifest_version": 3,
  "name": "Slugify Title",
  "version": "1.1",
  "description": "Gera um slug do título da página e copia para a área de transferência.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
